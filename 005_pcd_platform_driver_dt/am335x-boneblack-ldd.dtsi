/ {
	pcdev1: pcdev-1 {
		compatible = "pcd_dev-A1x","pcd_dev-E1x";
		org,size = <512>;
		org,device-serial-num = "PCD1";
		org,perm = <0x11>;
	};
	pcdev2: pcdev-2 {
		compatible = "pcd_dev-B1x";
		org,size = <1024>;
		org,device-serial-num = "PCD2";
		org,perm = <0x01>;
	};

	pcdev3: pcdev-3 {
		compatible = "pcd_dev-C1x";
		org,size = <512>;
		org,device-serial-num = "PCD3";
		org,perm = <0x11>;
	};
	pcdev4: pcdev-4 {
		compatible = "pcd_dev-D1x";
		org,size = <512>;
		org,device-serial-num = "PCD4";
		org,perm = <0x10>;
	};
};
